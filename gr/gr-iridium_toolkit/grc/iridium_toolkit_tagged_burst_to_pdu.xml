<?xml version="1.0"?>
<block>
  <name>tagged_burst_to_pdu</name>
  <key>iridium_toolkit_tagged_burst_to_pdu</key>
  <category>iridium_toolkit</category>
  <import>import iridium_toolkit</import>
  <make>iridium_toolkit.tagged_burst_to_pdu($max_burst_size, $relative_center_frequency, $relative_span, $max_outstanding, $drop_overflow)</make>

  <param>
    <name>Max Burst Size</name>
    <key>max_burst_size</key>
    <value>100000</value>
    <type>int</type>
  </param>

  <param>
    <name>Relative Center Frequency</name>
    <key>relative_center_frequency</key>
    <value>0.0</value>
    <type>float</type>
  </param>

  <param>
    <name>Relative Span</name>
    <key>relative_span</key>
    <value>1.0</value>
    <type>float</type>
  </param>

  <param>
    <name>Maximum Outstanding Bursts</name>
    <key>max_outstanding</key>
    <value>500</value>
    <type>int</type>
  </param>

  <param>
    <name>Drop Overflowing Bursts</name>
    <key>drop_overflow</key>
    <value>False</value>
    <type>bool</type>
  </param>


  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <sink>
    <name>burst_handled</name>
    <type>message</type>
  </sink>

  <source>
    <name>cpdus</name>
    <type>message</type>
  </source>

</block>
